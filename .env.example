# Open-Lovable Environment Variables
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# Required for E2B Sandboxing (get from https://e2b.dev/dashboard?tab=keys)
E2B_API_KEY=your_e2b_api_key_here

# Required for Web Scraping (get from https://firecrawl.dev/)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# AI Providers (at least one required)
# AvalAI (Premium models including GPT-5, Claude 4)
AVALAI_API_KEY=your_avalai_api_key_here
AVALAI_BASE_URL=https://api.avalai.ir/v1

# Google AI (Free Gemini models)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key_here

# Optional AI Providers
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GROQ_API_KEY=your_groq_key_here

# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app